
<%-include("../partials/user/head.ejs")%>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link rel="stylesheet" href="/css/user/header.css">
<style>
    input[type=number]::-webkit-inner-spin-button, 
    input[type=number]::-webkit-outer-spin-button { 
        -webkit-appearance: none;
        appearance: none; 
    }
    </style>
<body class="bg-[#F2F2F2]  flex flex-col h-screen">
    <header class="bg-[#5E8E99]  flex items-center justify-center px-3 py-2 lg:hidden">
        <img class="h-8" src="/images/Logo.png" alt="">
    </header>
    <%-include('../partials/user/HeaderDesktopUser.ejs')%>
    <main class="px-5 lg:px-0 lg:mx-60 lg:my-10 lg:flex lg:justify-between   lg:items-center  lg:flex-grow ">

            <div class="hidden lg:block  lg:h-full  lg:w-9/12 bg-[url('/images/logintest.jpeg')] bg-cover bg-no-repeat bg bg-center">
                <!-- <img src="/public/images/loginimg4.jpeg" alt=""> -->

            </div>
            <div class="lg:bg-white lg:px-20 lg:w-full  lg:h-full">
                <div>
                    <div class="mt-10">
                        <p class="font-semibold text-lg">You look like new here ...</p>
                        <p class="text-[#666666] text-xs pl-2 -mt-1 font-medium">  Create an account with us !! </p>
                    </div>
                    <form action="/user/createAccount" method="post" class="w-full mt-7" id="createAccountForm">
                        <input class="w-full rounded-md lg:bg-white bg-[#F2F2F2] border-[.2px] outline-none border-[#666666] px-2 py-[6px] placeholder:text-xs text-sm " placeholder="Full name" type="text" name="name" id="CAname">
                        <input class="w-full mt-5 rounded-md lg:bg-white bg-[#F2F2F2] border-[.2px] outline-none border-[#666666] px-2 py-[6px] placeholder:text-xs text-sm " placeholder="email" type="text" name="email" id="CAemail">
                        <div class="flex mt-5 space-x-5 text-xs text-[#333333] lg:text-sm">
                            <p>Gender</p>
                            <div class="flex items-center space-x-2">
                                <input type="radio" name="gender" id="male" value="male" checked>
                                <label for="male">Male</label>
                            </div>
                            <div class="flex items-center space-x-2">
                                <input type="radio" name="gender" id="female" value="female">
                                <label for="female">Female</label>
                            </div>
                        </div>
                            <div class="w-full mt-5 rounded-md lg:bg-white bg-inherit border-[.2px]  border-[#666666] flex justify-between items-center pl-1 pr-2 ">
                                <input class=" outline-none bg-inherit px-2 py-[6px] placeholder:text-xs text-sm w-full" placeholder="Password" type="password" name="" id="CApassword">
                                <span id="VisibilityPassword" class="material-symbols-outlined cursor-pointer text-lg select-none"onclick="togglePasswordVisibility()">
                                    visibility_off
                                    </span>
                            </div>
                            <div id="passwordregxError" class="absolute invisible opacity-0   transition-all duration-300 mt-2 flex p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                                <svg class="flex-shrink-0 inline w-4 h-4 me-3 mt-[2px]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                  <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                                </svg>
                                <span class="sr-only">Danger</span>
                                <div>
                                  <span class="font-medium">Ensure that these requirements are met:</span>
                                    <ul class="mt-1.5 list-disc list-inside">
                                      <li>At least 8 characters </li>
                                      <li>At least one lowercase character</li>
                                      <li>Inclusion of at least one special character, e.g., ! @ # ?</li>
                                  </ul>
                                </div>
                              </div>
                            <div class="w-full mt-5 bg-inherit rounded-md lg:bg-white bg-[#F2F2F2] border-[.2px] border-[#666666] flex justify-between items-center pl-1 pr-2">
                                <input class="w-full outline-none bg-inherit  px-2 py-[6px] placeholder:text-xs text-sm " placeholder="Confirm password" type="password" name="password" id="CAconfirmPassword">
                                <span id="VisibilityConfirmPassword" class="material-symbols-outlined cursor-pointer text-lg select-none"onclick="togglePasswordVisibilityConfirm()">
                                    visibility_off
                                    </span>
                            </div>
                         
                        <button type="submit" class="hidden" id="loginPhoneSubmit"></button>
                        
                    </form> 
                    <!-- <a class="text-xs text-[#66666] mt-4 ml-2 cursor-pointer font-medium">We've sent an otp to ******2602
                    </a> -->
                </div>
                
                <div class="hidden lg:block mt-10">
                    <p class="text-xs text-red-700  flex justify-center items-center hidden    createAccountError">invalid phone number</p>
                    <label for="loginPhoneSubmit" class="bg-[#DAA520] cursor-pointer hover:bg-[#c4951d] flex items-center justify-center text-white w-full py-2 font-medium mt-2  rounded-md" >
                        Create Account
                    </label>
                </div>
               
            </div>
        
    </main>
    <div class="lg:hidden flex-grow">
    </div>
    <div class="lg:hidden">
        <p class="text-xs text-red-700  flex justify-center items-center   my-2 lg:hidden hidden createAccountError">invalid phone number</p>
    </div>
    <div class="px-2 py-2  border-t-[.1px] border-t-[#666666] lg:hidden">
        
        <div for="loginPhoneSubmit" class="w-full  " >
            <label for="loginPhoneSubmit" class="w-full py-1 flex justify-center items-center text-white rounded-md font-semibold bg-[#565656]">
                Continue
            </label>
        </div>
    </div>
    
    <div class="hidden lg:block">
        <%-include("../partials/user/userFooter.ejs")%>
    </div>
   
</body>
<script src="/javascripts/user/createAccount.js"></script>
<script src="../../javascripts/user/common.js"></script>
</html>