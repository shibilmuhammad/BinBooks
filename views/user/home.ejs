                        <span id="moreIcon"  class="material-symbols-outlined text-white mt-[2px]">
                            expand_more
                        </span>
                    </div>
                    <div id="dropDownContents" class="dropdown_contents absolute z-10 top-[15px] right-[-100%] min-w-[190px]  group-hover:block  ">  <!--Dropdown contents-->
