<%-include("../partials/user/head.ejs")%>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link rel="stylesheet" href="/css/user/header.css">
<style>
input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
    -webkit-appearance: none;
    appearance: none; 
}
input:-webkit-autofill {
  box-shadow: 0 0 0 30px white inset; 
}
</style>
<body class="bg-[#F2F2F2]  flex flex-col h-screen">
    <header class="bg-[#5E8E99]  flex items-center justify-center px-3 py-2 lg:hidden">
        <img class="h-8" src="/images/Logo.png" alt="">
    </header>
    <%-include('../partials/user/HeaderDesktopUser.ejs')%>
    <div class="searchResult-Container">
    </div>
    <main class="px-5 lg:px-0 lg:mx-60 lg:my-10 lg:flex lg:justify-between   lg:items-center  lg:flex-grow ">

            <div class="hidden lg:block  lg:h-full  lg:w-9/12 bg-[url('/images/logintest.jpeg')] bg-cover bg-no-repeat bg bg-center">
                <!-- <img src="/public/images/loginimg4.jpeg" alt=""> -->

            </div>
            <div class="lg:bg-white lg:px-20 lg:w-full  lg:h-full">
                <div>
                    <div class="mt-10">
                        <p class="font-semibold text-lg">Turn the page to membership</p>
                        <p class="text-[#666666] text-xs pl-2 -mt-1 font-medium"> Uncover Hidden Tales in Every Book !!</p>
                    </div>
                    <form id="loginFirstForm" method="post" action="" class="w-full mt-7">
                        <input type="number" class="w-full rounded-md lg:bg-white bg-[#F2F2F2] border-[.2px] outline-none border-[#666666] px-2 py-[6px] placeholder:text-xs text-sm " placeholder="Phone number here" name="customerPhone" id="loginPhoneInput">
                        <p class="text-xs text-red-700  m-1 mx-2 hidden " id="loginError"> phone number can't be empty</p>
                        <button type="submit" class="hidden" id="loginPhoneSubmit"></button>
                    </form>
                    <% if (locals.error && typeof error !== 'undefined') { %>
                        <p id="incorrectError" class="text-xs text-red-800 mx-2 mt-2"><%= error %></p>
                    <% } %>
                    <p class="text-[10px] text-[#666666] mt-6 ml-2">By continuing, you agree to Binbook's <span class="text-blue-600">Terms of Use </span>and <span class="text-blue-600">Privacy Policy.</span> 
                    </p>
                </div>
            
                <div class="hidden lg:block">
                    <label for="loginPhoneSubmit"  class="bg-[#DAA520] cursor-pointer hover:bg-[#c4951d] flex justify-center items-center text-white w-full py-2 font-medium  mt-10 rounded-md" >
                        Continue
                    </label>
                </div>
               
            </div>
        
    </main>
   
    <div class="px-2 py-2 border-t-[.1px] border-t-[#666666] lg:hidden   fixed bottom-0 flex justify-center items-center w-full">
        <div  class="w-full  " >
            <label for="loginPhoneSubmit" class="flex justify-center items-center w-full py-1 text-white rounded-md font-semibold bg-[#565656]">
                Continue
            </label>
        </div>
    </div>
    
    <div class="hidden lg:block">
        <%-include("../partials/user/userFooter.ejs")%>
    </div>
   
</body>
<script src="/javascripts/user/login.js"></script>
<script src="../../javascripts/user/common.js"></script>
</html>