<%-include("../partials/user/head.ejs")%>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link rel="stylesheet" href="/css/user/header.css">
<body class="bg-[#F2F2F2]  flex flex-col h-screen">
    <header class="bg-[#5E8E99]  flex items-center justify-center px-3 py-2 lg:hidden">
        <img class="h-8" src="/images/Logo.png" alt="">
    </header>
    <%-include('../partials/user/HeaderDesktopUser.ejs')%>
    <div class="searchResult-Container">
    </div>
    <main class="px-5 lg:px-0 lg:mx-60 lg:my-10 lg:flex lg:justify-between   lg:items-center  lg:flex-grow ">

            <div class="hidden lg:block  lg:h-full  lg:w-9/12 bg-[url('/images/logintest.jpeg')] bg-cover bg-no-repeat bg bg-center">
                <!-- <img src="/public/images/loginimg4.jpeg" alt=""> -->

            </div>
            <div class="lg:bg-white lg:px-20 lg:w-full  lg:h-full">
                <div>
                    <div class="mt-10">
                        <p class="font-semibold text-lg">Did you get an OTP ??</p>
                        <p class="text-[#666666] text-xs pl-1 -mt-1 font-medium"> Enter the OTP below</p>
                    </div>
                    <form  action="/user/otp/confirmation" method="post" class="w-full mt-7">
                        <input class="w-full rounded-md lg:bg-white bg-[#F2F2F2] border-[.2px] outline-none border-[#666666] px-2 py-[6px] placeholder:text-xs text-sm " placeholder="Enter the otp here" type="text" name="otp" id="">
                        <button type="submit" class="hidden" id="loginPhoneSubmit"></button>
                    </form>
                    <% if (locals.email) { %>
                        <p class="text-xs text-[#66666] mt-4 ml-2 cursor-pointer font-medium">We've sent an OTP to <%= email %>.</p>
                    <% } %>
                     <% if (typeof error !== 'undefined') { %> 
                            <p id="incorrectError" class="text-xs text-red-800 mx-2 mt-2"><%= error %></p>
                        <% } %>
                </div>
                <div class="hidden lg:block">
                    <label for="loginPhoneSubmit" class="bg-[#DAA520] flex justify-center items-center hover:bg-[#c4951d] text-white w-full py-2 font-medium  mt-10 rounded-md" >
                        Continue
                    </button>
                </div>
               
            </div>
        
    </main>
    <div class="lg:hidden flex-grow">
    </div>
    <div class="px-2 py-2 border-t-[.1px] border-t-[#666666] lg:hidden">
        <label for="loginPhoneSubmit" class="w-full  " >
            <label for="loginPhoneSubmit" class="w-full py-1 text-white rounded-md font-semibold bg-[#C0C0C0] justify-center items-center">
                Continue
            </label>
        </label>
    </div>
    
    <div class="hidden lg:block">
        <%-include("../partials/user/userFooter.ejs")%>
    </div>
   
</body>
<script src="/javascripts/user/myAccount.js"></script>
</html>