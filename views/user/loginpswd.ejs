<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <meta http-equiv="cache-control" content="no-store, no-cache, must-revalidate, max-age=0">
       
    </head>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link rel="stylesheet" href="/css/user/header.css">
<style>
input:-webkit-autofill {
  box-shadow: 0 0 0 30px white inset; 
}
</style>
<body class="bg-[#F2F2F2]  flex flex-col h-screen">
    <header class="bg-[#5E8E99]  flex items-center justify-center px-3 py-2 lg:hidden">
        <img class="h-8" src="/images/Logo.png" alt="">
    </header>
    <%-include('../partials/user/HeaderDesktopUser.ejs')%>
    <div class="searchResult-Container">
    </div>
    <main class="px-5 lg:px-0 lg:mx-60 lg:my-10 lg:flex lg:justify-between   lg:items-center  lg:flex-grow ">

            <div class="hidden lg:block  lg:h-full  lg:w-9/12 bg-[url('/images/logintest.jpeg')] bg-cover bg-no-repeat bg bg-center">
                <!-- <img src="/public/images/loginimg4.jpeg" alt=""> -->

            </div>
            <div class="lg:bg-white lg:px-20 lg:w-full  lg:h-full">
                <div>
                    <div class="mt-10">
                        <p class="font-semibold text-lg">Turn the page to membership</p>
                        <p class="text-[#666666] text-xs pl-2 -mt-1 font-medium"> Uncover Hidden Tales in Every Book !!</p>
                    </div>
                    <form action="/user/loginpswd" method="post" class="w-full mt-7" id="loginpswdForm">
                        <div class="w-full rounded-md flex justify-between items-center lg:bg-white bg-[#F2F2F2] border-[.2px] border-[#666666] px-2 py-[6px] ">
                            <input class="outline-none w-full  bg-white placeholder:text-xs text-sm bg-inherit bg-none  select-none" placeholder="Password here" type="text" name="password" id="password">
                            <span id="visibilityIcon" class="material-symbols-outlined cursor-pointer text-lg select-none"onclick="togglePasswordVisibility()">
                                visibility_off
                                </span>
                        </div>
                        <p id="pswdError" class="text-xs text-red-800 mx-2 mt-2 hidden"></p>
                        <% if (typeof error !== 'undefined') { %>
                            <p id="incorrectError" class="text-xs text-red-800 mx-2 mt-2"><%= error %></p>
                        <% } %>
                        <button type="submit" class="hidden" id="loginPhoneSubmit"></button>
                    </form>
                    <a href="/user/forgetPassword" class="text-[10px] text-blue-500 mt-4 ml-2 cursor-pointer font-medium">Forgotten password?
                    </a>
                </div>
                <div class="hidden lg:block">
                    <label for="loginPhoneSubmit" class="bg-[#DAA520] hover:bg-[#c4951d] flex justify-center items-center text-white w-full py-2 font-medium  mt-10 rounded-md" >
                        Continue
                    </label>
                </div>
               
            </div>
        
    </main>
    <div class="lg:hidden flex-grow">
    </div>
    <div class="px-2 py-2 border-t-[.1px] border-t-[#666666] lg:hidden">
        <div for="loginPhoneSubmit" class="w-full  " >
            <label for="loginPhoneSubmit" class="w-full py-1 cursor-pointer text-white rounded-md font-semibold bg-[#565656] flex justify-center items-center">
                Continue
            </label>
        </div>
    </div>
    
    <div class="hidden lg:block">
        <%-include("../partials/user/userFooter.ejs")%>
    </div>
   
</body>
<script>
     function togglePasswordVisibility() {
        var passwordInput = document.getElementById('password');
        var visibilityIcon = document.querySelector('#visibilityIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            visibilityIcon.textContent = 'visibility';
        } else {
            passwordInput.type = 'password';
            visibilityIcon.textContent = 'visibility_off';
        }
    }
</script>
<script src="/javascripts/user/loginpswd.js"></script>
<script src="../../javascripts/user/common.js"></script>
</html>