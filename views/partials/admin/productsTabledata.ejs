<% products.forEach(function(data){%>
    <tr class="bg-white  text-sm  ">
        <td class="ps-3 py-2"><%=data._id%></td>
        <td class="max-w-[14rem] truncate pr-6 font-medium capitalize"><%=data.bookName%></td>
        <td class="capitalize"><%=data.category%></td>
        <td class="capitalize"><%=data.author%></td>
        <td><%=data.salePrice%></td>
        <td class="flex justify-center items-center mt-1">
            <div <% if(data.status==="No stock") {%> class="bg-[#fbebec] text-[#b16d70] rounded-full text-center w-2/3 px-3 whitespace-nowrap flex justify-center items-center"<% }else{%>class="bg-[#DBFCDF] text-[#189E34] rounded-full text-center w-2/3 px-3 whitespace-nowrap flex justify-center items-center"<%}%>><%=data.status%></div>
        </td>
        <td>
            <div class="flex space-x-4">
                <img id="<%=data._id%>" onclick="editProduct(this)" class="h-4 cursor-pointer" src="/images/edit blue.png" alt="">
                <img  id="<%=data._id%>" onclick=" deletePopup(this)" class="h-4 cursor-pointer" src="/images/trash red.png" alt="">
            </div>
        </td>
    </tr>
<%})%> 