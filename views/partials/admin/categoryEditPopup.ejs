<link rel="stylesheet" href="/css/admin/categories.css">
<body class="bg-slate-200 ">
    <div class="fixed inset-0 flex justify-center items-center bg-[rgba(0,0,0,0.3)] hidden" id="categoryEditPopup">
        <form action="/admin/category/update" id="CategoryEditsubmit"  method="post" enctype="multipart/form-data" class=" bg-white rounded-lg w-fit  py-8 px-5 relative space-y-6 text-sm pr-8 pt-10">
           <div  class="space-x-10 flex justify-between">
            <label for="">Category</label>
            <div>
                <input disabled  type="text" name="categoryName" id="categoryEditName" class="px-2 border-gray-400 border-[.1px] w-80 rounded-full ">
                <span id="categoryNameEditError" class=" text-[10px] text-red-600 space-y-0  hidden">Category name cannot be empty !!</span>
            </div>
            <input name="id" id="Id" class="hidden" type="text">
           </div>
           
           <div  class="space-x-16 flex w-full">
            <label  for="">Status</label>
            <select  class="border-gray-400 border-[.1px] w-4/12  rounded-full text-left text-xs px-2 text-gray-500" name="status" id="categoryEditStatus">
                <option value="Active">Active</option>
                <option value="Blocked">Blocked</option>
            </select>
           </div>
           <div class="flex flex-col w-full">
            <label class="text-sm" name="" for="">Category Description</label>
            <div>
                <textarea   class="border-gray-400 border-[.1px]  w-full " name="categoryDescription" id="categoryEditDescription" cols="20
                " rows="10"></textarea>
                <span id="categoryDescriptionEditError" class="text-[10px] text-red-600 hidden">Category Description cannot be empty !!</span>
            </div>
           
            </div>
            
           <div class="flex  space-x-5 items-center">
            <p class="text-sm">Upload image</p>
            <div class="">
                
                <input  type="file" accept="image/*" name='editImg' id="productImageEdit" hidden  >
                <label for="productImageEdit" class="flex items-center space-x-2 border-dotted border-[.1px] border-gray-400 px-2 w-fit py-2 cursor-pointer">
                    <img src="" class="w-[100px] h-[80px] object-cover rounded-sm" id="preview-imageEdit" alt="">
                    <img src="/images/imageUpload.png" id="UploadImageEdit" alt="" class="h-4  " >
                    <p class="text-sm text-[#666666] " id="BrowseImageEdit">Browse image</p>
                   
                   
                </label>
                <div class="flex items-center justify-center  space-x-2">
                    <img class="h-4 hidden" src="/images/tick.png" id="tickImageEdit" alt="">
                    <p class="text-sm text-[#666666] hidden  " id="imageEditDone">Done</p>
                </div>
                
            </div>
            
    </div>  
    <span id="imageUploadEditError" class="text-[10px]  text-red-600 hidden">Upload suitable image for this category !!</span>
           <div class="w-full ">
            <button id="CategorysubmitButton"  type="submit" class="bg-[#DAA520] text-white w-full rounded-full  text-base font-normal flex justify-center items-center ">
                <span id="saveSpanEdit">Save</span>
                <div class="flex items-center justify-center font-normal hidden" id="loadingEdit">
                    <svg aria-hidden="true" role="status" class="inline w-4  h-4 me-3 text-white animate-spin" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
