
<%-include("head.ejs")%>
<body class="bg-slate-200 ">
    <div class="fixed inset-0 flex justify-center items-center bg-[rgba(0,0,0,0.3)] hidden" id="ordermanagmentPopup">
        <form id="orderStatusUpdateForm" action="" method="post" class=" bg-white rounded-lg w-fit   py-8 px-5 relative  text-sm pr-8 pt-10 grid grid-cols-2 grid-rows-2">
            <input type="text" hidden name="Ids" id="orderAndUserId">
            <div class="shadow-xl px-2 py-3 rounded-lg mr-3 mb-3 max-w-sm max-h-72 overflow-y-auto"><!--First part-->
                <table class=""> 
                    <tr class=" ">
                        <th class="text-left w-40 text-sm ">Address</th>
                        <th class=""></th>
                    </tr>
                    <tr class="text-[#333333]">
                        <td class="">Name</td>
                        <td id="a-name"></td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td>Phone</td>
                        <td id="a-phone">8086812602 </td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td class="">House No/Name</td>
                        <td id="a-house" >356 </td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td>Area</td>
                        <td id="a-area">vadakra </td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td>City</td>
                        <td id="a-city">Kozhickode </td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td>State</td>
                        <td id="a-state">Kerala </td>
                    </tr>
                    <tr class="text-[#333333]">
                        <td>Pincode</td>
                        <td id="a-pinCode">673524 </td>
                    </tr>
                    <tr class="text-[#333333]"> 
                        <td>Land Mark</td>
                        <td id="a-landMark">Near kuniyil thazhe juma masjid 
                        </td>
                    </tr>
                   </table>
            </div>
           <div class="shadow-xl px-2 py-3 rounded-lg mb-3 max-h-72 overflow-y-auto" id="productsContainer">  <!--second part-->
                    <h1 class="text-sm font-semibold">Products</h1>
                    
           </div>
           <div class="shadow-xl px-2 py-3 rounded-lg mr-3">  <!--third part-->
            <table> 
                <tr class="text-[#333333]"  >
                    <th class="text-left w-40 ">Payment Summary</th>
                    <th class=""></th>
                </tr>
                <tr class="text-[#333333">
                    <td class="">Payment Method</td>
                    <td id="paymentMethod">Debit Card</td>
                </tr>
                <tr>
                    <td>Shipping charge</td>
                    <td>₹40 </td>
                </tr>
                <tr class="text-[#333333">
                    <td class="">MRP</td>
                    <td id="totalMRP"></td>
                </tr>
                <tr class="text-[#333333">
                    <td class="">Discount</td>
                    <td id="totalDiscount">₹40 </td>
                </tr>
                <tr class="text-[#333333">
                    <td>Total Amount </td>
                    <td id="totalAmount">₹400 </td>
                </tr>
                <tr class="text-[#333333">
                    <td>Phone</td>
                    <td id="phoneNum">3022333453 </td>
                </tr>
                <tr text-[#333333>
                    <td>Created on</td>
                    <td id="dateofOrder">dd/mm/yyyy 12:14:25 am </td>
                </tr>
               </table>
           </div>
           <div class="flex flex-col justify-between shadow-xl px-2 py-3 rounded-lg"> <!--final part-->
                <h1 class="text-sm font-semibold">Order Status</h1>
                <div class="flex  space-x-3">
                    <label for="">Order Status</label>
                    <div>
                        <div class="flex items-center space-x-3">
                            <input  type="radio" value="ordered" name="status" id="ordered">
                            <label for="ordered">Ordered</label>
                        </div>
                        <div class="flex items-center space-x-3">
                            <input  type="radio" value="Packed" name="status" id="Packed">
                            <label for="Packed">Packed</label>
                        </div>
                        <div class="flex items-center space-x-3">
                            <input type="radio" value="Shipped" name="status" id="Shipped">
                            <label for="Shipped">Shipped</label>
                        </div>
                        <div class="flex items-center space-x-3"> 
                            <input value="Delivered" type="radio" name="status" id="Delivered">
                            <label for="Delivered">Delivered</label>
                        </div>
                        <div class="flex items-center space-x-3">
                            <input value="Cancelled" type="radio" name="status" id="Cancelled">
                            <label for="Cancelled">Cancelled</label>
                        </div>
                        
                        
                    </div>
                </div>
                <button class="w-full bg-[#DAA520] text-white rounded-lg">
                    Update details
                </button>
           </div>
           <div class="absolute top-4 cursor-pointer right-2" onclick="hideEditOrder()">
            <img class="h-6" src="/images/close.png" alt="">
            </div>
        </form>
        
    </div>
</body>
</html>
