
<%-include("../partials/admin/head.ejs")%>
<style>
    input[type=number]::-webkit-inner-spin-button, 
    input[type=number]::-webkit-outer-spin-button { 
        -webkit-appearance: none;
        appearance: none; 
    }
    </style>
<body class="bg-[#F2F2F2]">
    <%-include("../partials/admin/header.ejs")%>
    <main class="px-10 flex">
        <div class="left mt-28 space-y-4 border-r-[.1px] border-gray-400  w-fit pt-1 pb-1 pr-2">
            <a href="dashboard" class="flex items-center space-x-2 cursor-pointer hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-6" src="/images/dashboardIcon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Dashboard</h2>
            </a>
            <a class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/productsIconselected.png" alt="">
                <h2 class="text-base font-semibold text-[#4B727A]">Products</h2>
            </a>
            <a href="customers" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3" >
                <img class="h-5" src="/images/customersicon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Customers</h2>
            </a>
            <a href="orders" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-5" src="/images/Orders icon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Orders</h2>
            </a>
            <a href="category" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/categoryicon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Category</h2>
            </a>
            <a href="banner" class="flex items-center space-x-2 mb-12 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-3" src="/images/bannericon.png" alt="">
               <h2 class="text-base font-semibold text-[#7E7878] pr-10 whitespace-nowrap ">Banner Manage</h2>
            </a>
        </div>

        <div class="right mt-20 ml-16 w-full">
            <div class="searchandsort flex  justify-between">
                <div class="flex space-x-7 ">
                    <div class="flex space-x-7">
                        <form action="" class="flex space-x-1 "><!--sort-->
                            <div class="flex items-center space-x-1">
                                <label class="text-xs text-[#333333]" for="">sort</label>
                              <select name="" id="sortSelect" class="rounded-md px-2 py-1 text-xs text-[#666666 outline outline-[.1px] outline-gray-400">
                                <option  value="productName">Product name</option>
                                <option value="Price">Price</option>
                              </select>
                            </div>
                            <div class="flex  items-center space-x-1">
                                <label class="text-xs text-[#333333]" for="">by</label>
                             <select name="" id="sortHow" class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666]">
                             </select>
                            </div>
                            
                        </form>
                        <form action="" ><!--filter-->
                            <select name="" id="filterValues"  class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666] max-w-20">
                                <option value="" disabled selected>Filter by</option>
                                <option value="allProducts">All products</option>
                                <option value="below100">Below 100</option>
                                <option value="100-200">100-200</option>
                                <option value="200-300">200-300</option>
                                <option value="above300">above 300</option>
                                <% category.forEach(function(data){%>
                                    <option value="<%=data.categoryName %>" ><%= data.categoryName%></option>
                               <% }) %>
                            </select>
                        </form>
                    </div>
                   
                    <form action="" id="searchProductForm"> <!--search-->
                        <div class="flex items-center rounded-md bg-white    text-[#666666] outline outline-[.1px] outline-gray-400">
                            <input type="text" class="outline-none rounded-md pl-3 text-xs w-80 placeholder:text-xs" name="" id="searchValue" placeholder="Search products.. ">
                            <button class="bg-[#DAA520] px-1 py-1 rounded-md h-full">
                                <img src="/images/search white.png" class="h-4" alt="">
                            </button>
                        </div>
                    </form>
                </div>
                <div action="" class="relative flex justify-end  cursor-pointer" onclick="showUploadProductPopup()" >
                    <img class="h-6 ml-64" src="/images/uploadIcon.png"  alt="">
                    <h2 class="text-white absolute top-1 right-4 text-xs font-semibold ">Upload</h2>
                </div>
            </div>
            
            <div class="h-[32rem] overflow-y-auto">
                <table class=" w-full mt-2 relative">
                <tr class="bg-[#5E8E99]   text-white text-left font-medium sticky top-0  ">
                        <th class="font-medium ps-3 rounded-tl-md py-2">Product ID</th>
                        <TH class="font-medium  ">Product Name</TH>
                        <th class="font-medium">Category</th>
                        <th class="font-medium">Author</th>
                        <th class="font-medium">Price</th>
                        <th class="font-medium text-center">Status</th>
                        <th class="rounded-tr-md font-medium">Action</th>
                    </tr>
                    <tbody id="table-container" > 
                        <%-include("../partials/admin/productsTabledata.ejs")%>
                    </tbody>
                </table>
            </div>
           
        </div>
        <%-include("../partials/admin/deleteProduct.ejs")%>
        <%-include("../partials/admin/productUploadPopup.ejs")%>
        <%-include("../partials/admin/productEditPopup") %>
    </main>
    
</body>
<script src="/javascripts/admin/adminproducts.js"></script>
</html>