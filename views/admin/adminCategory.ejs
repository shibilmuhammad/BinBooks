
    
<%-include("../partials/admin/head.ejs")%>
<body class="bg-[#F2F2F2]">
    <%-include("../partials/admin/header.ejs")%>
    <main class="px-10 flex">
        <div class="left mt-28 space-y-4 border-r-[.1px] border-gray-400  w-fit pt-1 pb-1 pr-2">
            <a href="/admin/dashboard" class="flex items-center space-x-2 cursor-pointer hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-6" src="/images/dashboardIcon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Dashboard</h2>
            </a>
            <a href="/admin/products" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/productsIcon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Products</h2>
            </a>
            <a href="/admin/customers" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-5" src="/images/customersicon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Customers</h2>
            </a>
            <a href="/admin/orders" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-5" src="/images/Orders icon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Orders</h2>
            </a>
            <a href="/admin/category" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/CategorySelected.png" alt="">
                <h2 class="text-base font-semibold text-[#4B727A]">Category</h2>
            </a>
            <a href="/admin/banner" class="flex items-center space-x-2 mb-12 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-3" src="/images/bannericon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878] pr-10 whitespace-nowrap ">Banner Manage</h2>
            </a>
        </div>
        
        <div class="right mt-20 ml-16 w-full">
            <div class="searchandsort flex  justify-between">
                <div class="flex space-x-7 ">
                    <div class="flex space-x-7">
                        <form action="" method="post" id="CategorySortForm" class="flex space-x-1 "><!--sort-->
                            <div class="flex items-center space-x-1">
                                <label class="text-xs text-[#333333]" for="">sort</label>
                              <select name="" id="sortSelect"  class="rounded-md px-2 py-1 text-xs text-[#666666 outline outline-[.1px] outline-gray-400">
                                <option  value="CategoryName">Category name</option>
                                <option value="ProductCount">Product count</option>
                              </select>
                            </div>
                            <div class="flex  items-center space-x-1">
                                <label class="text-xs text-[#333333]" for="sortHow">by</label>
                             <select name="sortValue" id="sortHow" class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666]">
                             </select>
                            </div>
                        </form>
                        <form action=""  method="post" id="filterForm"><!--filter-->
                                <select  name="categoryFilter"  id="categoryFilter"  class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666]">
                                    <option value="filterBy">Filter by</option>
                                    <option value="All">All</option>
                                    <option value="Active">Active</option>
                                    <option value="Blocked">Blocked</option>
                                </select>
                        </form>
                    </div>
                   
                    <form action="/admin/category/search" method="post" > <!--search-->
                        <div class="flex items-center rounded-md bg-white    text-[#666666] outline outline-[.1px] outline-gray-400">
                            <input value="<%=locals.searchvalue%>" type="text" class="outline-none rounded-md pl-3 text-xs w-80 placeholder:text-xs" name="categorySearch" id="" placeholder="Search by Category name.. ">
                            <button type="submit" class="bg-[#DAA520] px-1 py-1 rounded-md h-full cursor-pointer" >
                                <img src="/images/search white.png" class="h-4" alt="">
                            </button>
                        </div>
                    </form>
                </div>
                <form action="" class="relative flex justify-end cursor-pointer" onclick="showCategoryEdit()">
                    <img class="h-6 ml-64" src="/images/uploadIcon.png"  alt="">
                    <h2 class="text-white absolute top-1 right-4 text-xs font-semibold ">Upload</h2>
                </form>
            </div>
  
            <table class=" w-full mt-2">
                <tr class="bg-[#5E8E99]   text-white text-left font-medium  ">
                    <th class="font-medium ps-3 rounded-tl-md py-2">Category ID </th>
                    <TH class="font-medium text-left ">Category</TH>
                    <th class="font-medium text-center">Products</th>
                    <th class="font-medium text-center">Status</th>
                    <th class="rounded-tr-md font-medium">Action</th>
                </tr>
                <tbody id="table-container">
                    <%-include('../partials/admin/CategoryTabledata.ejs')%>
                </tbody>
            </table>
        </div>
    </main>
    <%-include('../partials/admin/categoryUploadPopup.ejs')%>
    <%-include('../partials/admin/categoryEditPopup.ejs')%>
    <%-include('../partials/admin/deleteCategory.ejs')%>
</body>
    <script src="/javascripts/admin/adminCategory.js"></script>
</html>