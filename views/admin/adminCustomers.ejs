
<%-include("../partials/admin/head.ejs")%>
<body class="bg-[#F2F2F2]">
    <%-include("../partials/admin/header.ejs")%>
    <main class="px-10 flex">
        <div class="left mt-28 space-y-4 border-r-[.1px] border-gray-400  w-fit pt-1 pb-1 pr-2">
            <a href="dashboard" class="flex items-center space-x-2 cursor-pointer hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-6" src="/images/dashboardIcon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Dashboard</h2>
            </a>
            <a href="products" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/productsIcon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Products</h2>
            </a>
            <a href="customers" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-5" src="/images/users selected.png" alt="">
                <h2 class="text-base font-semibold text-[#4B727A]">Customers</h2>
            </a>
            <a href="orders" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-5" src="/images/Orders icon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Orders</h2>
            </a>
            <a href="category" class="flex items-center space-x-2 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-4" src="/images/categoryicon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878]">Category</h2>
            </a>
            <a href="banner" class="flex items-center space-x-2 mb-12 cursor-pointer  hover:bg-gray-200 rounded-sm px-3 py-3">
                <img class="h-3" src="/images/bannericon.png" alt="">
                <h2 class="text-base font-semibold text-[#7E7878] pr-10 whitespace-nowrap ">Banner Manage</h2>
            </a>
        </div>
        
        <div class="right mt-20 ml-16 w-full">
            <div class="searchandsort flex justify-between space-x-6">
                <div class="flex space-x-6">
                    <form action="">
                        <label class="text-xs text-[#333333]" for="">sort</label>
                        <select name="" id="sortSelect" class="rounded-md px-2 py-1 text-xs text-[#666666 outline outline-[.1px] outline-gray-400">
                            <option  value="username">username</option>
                            <option value="orders">Orders</option>
                        </select>
                        <label class="text-xs text-[#333333]" for="">by</label>
                        <select name="" id="sortHow" class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666]">
                           
                        </select>
    
                    </form>
                    <form action="">
                        <select name="" id="filterValues"  class=" outline outline-[.1px] outline-gray-400 rounded-md px-2 py-1 text-xs text-[#666666]">
                            <option value="All">All</option>
                            <option value="Active">Active</option>
                            <option value="Blocked">Blocked</option>
                        </select>
                    </form>
                </div>
                <form action="" id="searchProductForm">
                    <div class="flex items-center rounded-md bg-white    text-[#666666] outline outline-[.1px] outline-gray-400">
                        <input type="text" class="outline-none rounded-md pl-3 text-xs w-80 placeholder:text-xs" name="" id="searchValue" placeholder="Search customers.. ">
                        <button type="submit" class="bg-[#DAA520] px-1 py-1 rounded-md h-full">
                            <img src="/images/search white.png" class="h-4" alt="">
                        </button>
                    </div>
                    
                </form>
               
            </div>
  
            <table class=" w-full mt-2">
                <tr class="bg-[#5E8E99]   text-white text-left font-medium  ">
                    <th class="font-medium ps-3 rounded-tl-md py-2">User name </th>
                    <TH class="font-medium  ">Email</TH>
                    <th class="font-medium">Phone</th>
                    <th class="font-medium text-center">Orders</th>
                    <th class="font-medium text-center">Status</th>
                    <th class="rounded-tr-md font-medium text-center">Action</th>
                </tr>
                <tbody id="table-container">
                    <%-include('../partials/admin/customersTabledata.ejs')%>
                </tbody>
            </table>
           

        </div>
        <%-include("../partials/admin/customersEditPopup.ejs")%>
    </main>
    
</body>
<script src="/javascripts/admin/adminCustomers.js"></script>
</html>